/* 水平间距 */
.userTop {
  background-color: #bfbfbf;
  font-size: 20px;
  padding: 30rpx 150rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.userTop image {
  border-radius: 50%;
  width: 170rpx;
  height: 170rpx;
}
.content view {
  background-color: #bfbfbf;
  display: flex;
  justify-content: space-between;
  padding: 0 400rpx 0 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 20rpx;
}
.content view:active {
  background-color: #f5f5f5;
}
.content image {
  margin: auto 0;
  width: 70rpx;
  height: 70rpx;
}

