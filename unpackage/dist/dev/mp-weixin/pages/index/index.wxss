/* 水平间距 */
page {
  height: 100%;
}
.com_header {
  position: fixed;
  z-index: 1001;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  padding-top: 25px;
  line-height: 88rpx;
  background: #fff;
}
.com_header .com_header_center {
  margin-left: 150rpx;
  height: 100%;
  text-align: center;
  color: #111111;
  font-weight: bold;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.content1 {
  height: 100%;
}
.content1 image {
  display: block;
  height: 100%;
  width: 100%;
}
.content1 .popList {
  display: flex;
  margin: 20rpx 0 10rpx 0;
}
.content1 .popList view {
  text-align: center;
  width: 100%;
  height: 150rpx;
  line-height: 70rpx;
}
.content1 .popList image {
  border-radius: 50%;
  margin: 0 auto;
  width: 40%;
  height: 70%;
  display: block;
}
.content1 .morePop {
  margin: 80rpx 0 30rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 20px;
  padding: 0 30rpx 0 20rpx;
}
.content1 .bookshelf {
  margin-top: 50rpx;
}
.content1 .bookshelf .bookshelf-content {
  white-space: nowrap;
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  margin: 0 auto;
}
.content1 .bookshelf .bookshelf-content .item {
  width: 24%;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.content1 .bookshelf .bookshelf-content .item .img {
  display: inline-block;
}
.content1 .bookshelf .bookshelf-content .item .img image {
  width: 170rpx;
  height: 220rpx;
  border-radius: 6rpx;
}
.content1 .bookshelf .bookshelf-content .item .item-title {
  display: block;
  white-space: normal;
  width: 90%;
  font-size: 30rpx;
  line-height: 40rpx;
}
.content1 .bookshelf .title {
  display: flex;
  justify-content: space-between;
  font-size: 20px;
  padding: 0 30rpx 0 20rpx;
}
.content1 .musList {
  display: flex;
  flex-flow: wrap;
}
.content1 .musList view {
  padding: 0 0 180rpx 20rpx;
  width: 225rpx;
  height: 200rpx;
  text-align: center;
}
.content1 .musicList {
  padding: 0 0 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content1 .musicList image {
  flex: 15%;
  width: 100rpx;
  height: 100rpx;
}
.content1 .musicList view {
  flex: 70%;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.content1 .musicList ._span {
  flex: 15%;
}
.content1 .ranking {
  display: flex;
  overflow: hidden;
}
.content1 .ranking view {
  padding: 0 0 50rpx 20rpx;
  width: 200rpx !important;
  height: 200rpx;
  text-align: center;
}

